<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backgroundImg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LectorActivity">

    <TextView
        android:id="@+id/qrInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/qrImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/cliente"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_baseline_qr_code_scanner_24"
        android:onClick="scan" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:fontFamily="@font/roboto"
        android:text="Versión 2.0"
        android:textColor="@color/colorQuantum"
        android:textSize="10sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:fontFamily="@font/roboto"
        android:text="Versión 2.0"
        android:textColor="@color/colorQuantum"
        android:textSize="10sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView4"
        style="@style/srcQuantumBackground"
        android:layout_width="112dp"
        android:layout_height="124dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="17dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QTMtitulo3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:layout_span="2"
        android:gravity="center"
        android:text="PREPARAR PEDIDO"
        android:textColor="@color/colorQuantum"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/QTMtitulo3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="QTM - DESPACHO DE MATERIALES"
        android:textColor="@color/colorQuantum"
        android:textSize="12sp"
        android:visibility="visible" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cantidad"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ubicacion1"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/textView23"
        android:background="@drawable/ic_borde"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@color/textColor" />

    <EditText
        android:id="@+id/ubicacion1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/codigoLote"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/textView21"
        android:background="@drawable/ic_borde"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tipo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/textView18"
        android:background="@drawable/ic_borde"
        android:gravity="center"
        android:text=""
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/nroPedido"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/textView15"
        android:background="@drawable/ic_borde"
        android:gravity="center"
        android:text=""
        android:textColor="@color/textColor" />

    <EditText
        android:id="@+id/codigoLote"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/cliente"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/qrImage"
        android:layout_toEndOf="@+id/textView22"
        android:background="@drawable/ic_borde"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/cliente"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textView26"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/textView20"
        android:background="@drawable/ic_borde"
        android:gravity="center"
        android:text=""
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/tipo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/nroPedido"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/textView17"
        android:background="@drawable/ic_borde"
        android:gravity="center"
        android:text=""
        android:textColor="@color/textColor" />

    <Button
        android:id="@+id/volver"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"

        android:layout_marginBottom="80dp"
        android:autoText="false"
        android:background="@drawable/ic_borde2"
        android:onClick="Siguiente"
        android:text="VOLVER"
        android:textColor="@color/colorQuantumLila"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/grabar"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/custom_button3"
        android:onClick="Grabar2"
        android:text="DESPACHAR"
        app:cornerRadius="20dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:text="Nro. Pedido"
        android:textColor="@color/colorQuantum" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Tipo"
        android:textColor="@color/colorQuantum" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Nro. Cliente"
        android:textColor="@color/colorQuantum" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Cliente"
        android:textColor="@color/colorQuantum" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView21"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Ubicación"
        android:textColor="@color/colorQuantum" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView22"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Cantidad"
        android:textColor="@color/colorQuantum" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Codigo/Lote"
        android:textColor="@color/colorQuantum" />


</RelativeLayout>